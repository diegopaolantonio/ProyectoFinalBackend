<div>
  <h1 style="text-align: center;">Formulado de cobro</h1>
  <div style="display: flex; justify-content: center;">
    <form action="../charge/{{tid}}" method="POST" style="width: 30%; text-align: center;">
      <p>{{name}}<input type="hidden" name="name" value={{name}} /></p>
      <p>{{email}}<input type="hidden" name="email" value={{email}} /></p>
      <p>USD {{amount}}<input type="hidden" name="amount" value={{amount}} /></p>
      <br />
      <div id="card-element"></div>
      <div id="card-errors" role="alert"></div>
      <br />
      <button>Submit Payment</button>
    </form>
  </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="/js/payment.js"></script>